<div class="mt-4">
  <h3>Cập nhật khoá học</h3>

  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">name</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        id="name"
        placeholder="Enter name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description ">description </label>
      <textarea
        class="form-control"
        id="description "
        name="description"
      >{{course.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="videoId">videoId</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="videoId"
        placeholder="Enter videoId"
        name="videoId"
      />
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>